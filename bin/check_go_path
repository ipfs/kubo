#!/bin/sh

PWD=$1

if [ -z "$PWD" ]; then
	echo "must pass in your current working directory"
	exit 1
fi

[ -z "$GOPATH" ] && GOPATH="$HOME/go"

while [ ${#} -gt 1 ]; do
	if [ "$PWD" = "$2" ]; then
		exit 0
	fi
	shift
done

echo "go-ipfs must be built from within your \$GOPATH directory."
echo "expected within '$GOPATH' but got '$PWD'"
exit 1
